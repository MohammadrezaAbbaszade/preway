    android:layout_width="250dp"
    android:layout_height="150dp"
    android:textSize="20sp"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:textStyle="bold"
    android:fontFamily="@font/iranyekanwebregular"
    android:layout_marginTop="45dp"
    android:background="#EFE8E8"
    android:lineSpacingMultiplier="1"
    android:text=" قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب قوانین تسویه حساب"/>

    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="وارد کردن شماره شبا:"
        android:textStyle="bold"
        android:id="@+id/login_username_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_5"
        android:fontFamily="@font/iranyekanwebregular"
        android:layout_marginStart="@dimen/grid_4"
        android:layout_marginEnd="@dimen/grid_4" />
    <EditText android:textSize="@dimen/phone_verification_text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:id="@+id/login_referal_edtxt"
        android:background="@drawable/button_round_purple_2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_7"
        android:layout_marginTop="@dimen/grid_2"
        android:maxLines="1" android:inputType="phone|textNoSuggestions"
        android:imeOptions="actionGo" android:paddingStart="@dimen/grid_3"
        android:paddingEnd="@dimen/grid_3"
        android:layout_marginStart="@dimen/grid_3"
        android:layout_marginEnd="@dimen/grid_3" />


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/correct_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="@font/iranyekanwebregular"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:text="ارسال درخواست"/>
</LinearLayout>