<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hq_blue"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="fill_parent"
        android:background="#6b6ed7"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cashout_toolbar"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:background="#6b6ed7"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:navigationIcon="@drawable/icon_back_selector"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light">

            <TextView
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round_green_light"
                android:paddingTop="5dp"
                android:paddingEnd="3dp"
                android:text="اعتبار شما : 20000 تومان"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>


</androidx.cardview.widget.CardView>



