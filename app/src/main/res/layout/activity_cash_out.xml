<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            android:id="@+id/cashout_toolbar"
            android:background="@color/hq_blue"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            app:navigationIcon="@drawable/icon_back_selector"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            android:layout_gravity="center"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="درخواست تسویه حساب"
                android:textColor="@color/white"
                android:layout_gravity="center|top"
                android:textSize="15sp"/>
        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>


</androidx.cardview.widget.CardView>

<TextView
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:paddingTop="15dp"
    android:textSize="15sp"
    android:textStyle="bold"
    android:layout_marginTop="15dp"
    android:background="@drawable/button_round_yellow"
    android:text="اعتبار شما : 2000 تومان"/>


<TextView
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:textSize="20sp"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:textStyle="bold"
    android:layout_marginTop="45dp"
    android:background="#EFE8E8"
    android:lineSpacingMultiplier="1"
    android:text="قوانین"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fragment_sign_up_phone_number_edit_text"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#CA8BD6"
        android:inputType="number"
        android:layout_marginTop="65dp"
        android:hint="شماره شبا" />


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/correct_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:text="ارسال درخواست"/>
</LinearLayout>