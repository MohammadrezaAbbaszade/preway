<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainView"
    android:background="@color/hq_blue"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:textSize="@dimen/headline"
        android:textColor="@color/white"
        android:id="@+id/resultsTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1"
        android:text="@string/Results"
        android:fontFamily="@font/circularstdbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coinView"
        android:layout_width="@dimen/grid_3_half"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_3"
        app:layout_constraintBottom_toBottomOf="@+id/resultsTitleView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resultsTitleView"
        app:srcCompat="@drawable/ic_coin" />
    <TextView
        android:textSize="@dimen/tyc_txt_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@id/coinBalanceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/grid_1"
        android:paddingEnd="@dimen/grid_1"
        app:layout_constraintBottom_toBottomOf="@+id/coinView"
        app:layout_constraintStart_toEndOf="@+id/coinView"
        app:layout_constraintTop_toTopOf="@+id/coinView" />
    <ScrollView
        android:id="@+id/resultsScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="@dimen/grid_1"
        app:layout_constraintBottom_toTopOf="@+id/nextGameCountDownView"
        app:layout_constraintTop_toBottomOf="@+id/resultsTitleView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/resultsLevelContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3">
                <ImageView
                    android:id="@+id/resultsUserAvatarView"
                    android:layout_width="@dimen/grid_5"
                    android:layout_height="@dimen/grid_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ProgressBar
                    android:id="@+id/resultsLevelProgressView"
                    android:layout_width="fill_parent"
                    android:layout_height="5.0dip"
                    android:layout_marginTop="@dimen/grid_1"
                    android:progressDrawable="@drawable/progress_horizontal_purple"
                    app:layout_constraintTop_toBottomOf="@+id/resultsUserAvatarView"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
                <TextView
                    android:textSize="@dimen/body"
                    android:textColor="@color/hq_purple"
                    android:id="@+id/resultsPointsView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/resultsUserAvatarView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/resultsUserAvatarView" />
                <TextView
                    android:textSize="@dimen/body"
                    android:textColor="@color/white"
                    android:id="@+id/resultsLevelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_2"
                    app:layout_constraintBottom_toBottomOf="@id/resultsUserAvatarView"
                    app:layout_constraintStart_toEndOf="@id/resultsUserAvatarView"
                    app:layout_constraintTop_toTopOf="@id/resultsUserAvatarView" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/resultAnswersContainer"
                android:background="@drawable/rounded_rect_56dp"
                android:paddingTop="@dimen/grid_3_half"
                android:paddingBottom="@dimen/grid_3_half"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3_half"
                android:paddingStart="@dimen/grid_3"
                android:paddingEnd="@dimen/grid_3"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3"
                android:backgroundTint="@color/black_alpha_30">
                <ImageView
                    android:id="@+id/resultsPositiveIcon"
                    android:background="@drawable/circle"
                    android:padding="9.0dip"
                    android:layout_width="@dimen/grid_4"
                    android:layout_height="@dimen/grid_4"
                    android:src="@drawable/ic_pill_correct"
                    android:backgroundTint="@color/correct_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/resultsNegativeIcon"
                    android:background="@drawable/circle"
                    android:padding="9.0dip"
                    android:layout_width="@dimen/grid_4"
                    android:layout_height="@dimen/grid_4"
                    android:src="@drawable/ic_pill_incorrect"
                    android:backgroundTint="@color/hq_red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/resultsGuideline"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical" android:id="@+id/resultsGuideline"
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    app:layout_constraintGuide_percent="0.5" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/body"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@+id/resultsCorrectCountView"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_marginStart="@dimen/grid_1"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:autoSizeMaxTextSize="@dimen/body"
                    app:autoSizeMinTextSize="@dimen/caption_2"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/resultsGuideline"
                    app:layout_constraintStart_toEndOf="@+id/resultsPositiveIcon"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/body"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@+id/resultsIncorrectCountView"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_marginStart="@dimen/grid_1"
                    app:autoSizeMaxTextSize="@dimen/body"
                    app:autoSizeMinTextSize="@dimen/caption_2"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/resultsNegativeIcon"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/resultsEarnedContainer"
                android:background="@drawable/rounded_rect"
                android:paddingTop="@dimen/grid_3"
                android:paddingBottom="@dimen/grid_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3_half"
                android:paddingStart="@dimen/grid_4"
                android:paddingEnd="@dimen/grid_4"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3"
                android:backgroundTint="@color/black_alpha_30">
                <ImageView
                    android:id="@+id/starIcon"
                    android:layout_width="@dimen/grid_2"
                    android:layout_height="@dimen/grid_2"
                    android:layout_marginBottom="@dimen/grid_1_half"
                    android:src="@drawable/ic_white_star"
                    android:tint="@color/hq_yellow"
                    app:layout_constraintBottom_toTopOf="@+id/resultsPointsTitle"
                    app:layout_constraintEnd_toEndOf="@+id/resultsPointsTitle"
                    app:layout_constraintStart_toStartOf="@+id/resultsPointsTitle"
                    app:layout_constraintTop_toTopOf="@+id/resultsPointsValueView"
                    app:layout_constraintVertical_chainStyle="packed" />
                <ImageView
                    android:id="@+id/coinIcon"
                    android:layout_width="@dimen/grid_2"
                    android:layout_height="@dimen/grid_2"
                    android:layout_marginBottom="@dimen/grid_1_half"
                    android:src="@drawable/ic_coin_white"
                    android:tint="@color/hq_yellow"
                    app:layout_constraintBottom_toTopOf="@+id/resultsCoinsTitle"
                    app:layout_constraintEnd_toEndOf="@+id/resultsCoinsTitle"
                    app:layout_constraintStart_toStartOf="@+id/resultsCoinsTitle"
                    app:layout_constraintTop_toTopOf="@+id/resultsCoinsValueView"
                    app:layout_constraintVertical_chainStyle="packed" />
                <TextView
                    android:textSize="@dimen/caption_2"
                    android:textColor="@color/white"
                    android:id="@+id/resultsEarnedTitleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/You_Earned"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:textSize="@dimen/caption_2"
                    android:textColor="@color/hq_purple"
                    android:id="@id/resultsPointsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Points"
                    app:layout_constraintBottom_toBottomOf="@id/resultsPointsValueView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/starIcon" />
                <TextView
                    android:textSize="@dimen/caption_2"
                    android:textColor="@color/hq_purple"
                    android:id="@id/resultsCoinsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Coins"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:layout_constraintBottom_toBottomOf="@id/resultsCoinsValueView"
                    app:layout_constraintEnd_toStartOf="@id/resultsCoinsValueView"
                    app:layout_constraintTop_toBottomOf="@id/coinIcon" />
                <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:id="@+id/resultsEarnedGuideline"
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    app:layout_constraintGuide_percent="0.5" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="35.0sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@id/resultsPointsValueView"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1_half"
                    android:lines="1"
                    android:fontFamily="@font/circularstdmedium"
                    android:layout_marginStart="@dimen/grid_1"
                    app:autoSizeMaxTextSize="35.0sp"
                    app:autoSizeMinTextSize="@dimen/caption_2"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@id/resultsPointsTitle"
                    app:layout_constraintEnd_toStartOf="@+id/resultsEarnedGuideline"
                    app:layout_constraintStart_toEndOf="@id/resultsPointsTitle"
                    app:layout_constraintTop_toBottomOf="@id/resultsEarnedTitleView" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="35.0sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@id/resultsCoinsValueView"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1_half"
                    android:lines="1"
                    android:fontFamily="@font/circularstdmedium"
                    app:autoSizeMaxTextSize="35.0sp"
                    app:autoSizeMinTextSize="@dimen/caption_2"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@id/resultsCoinsTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/resultsEarnedTitleView" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/powerUpsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/subheadline"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/powerUpsTitleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1"
                    android:text="@string/Power_Ups" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/powerUpsList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1_half"
                    android:layout_marginStart="@dimen/grid_3"
                    android:layout_marginEnd="@dimen/grid_3"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/powerUpsSummaryContainer"
                android:background="@drawable/rounded_rect"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3_half"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3"
                android:backgroundTint="@color/black_alpha_30">
                <TextView
                    android:textSize="@dimen/caption_2"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/powerUpsSummaryTitleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2"
                    android:textAllCaps="true" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/powerUpsSummaryList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1"
                    android:layout_marginBottom="@dimen/grid_1"
                    android:layout_marginStart="@dimen/grid_3"
                    android:layout_marginEnd="@dimen/grid_3"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:textSize="@dimen/caption_1"
        android:textColor="@color/white"
        android:id="@id/nextGameCountDownView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_2"
        android:layout_marginBottom="@dimen/grid_1"
        app:layout_constraintBottom_toTopOf="@+id/nextGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buyUnlockButtonContainer"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_7"
        android:layout_marginBottom="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_3"
        android:layout_marginEnd="@dimen/grid_3"
        app:layout_constraintBottom_toTopOf="@+id/unlocksLeftView">
        <Button
            android:id="@+id/buyUnlockButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:backgroundTint="@color/hq_red"
            style="@style/ButtonRound" />
        <ImageView
            android:id="@+id/buyUnlockButtonImage"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_marginRight="20.0dip"
            android:src="@drawable/ic_locked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/buyUnlockButtonText"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/buyUnlockButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Unlock_Next_Game"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/buyUnlockButtonImage"
            app:layout_constraintRight_toLeftOf="@+id/buyUnlockButtonCoinImage"
            app:layout_constraintTop_toTopOf="parent" style="@style/ButtonText" />
        <ImageView
            android:id="@+id/buyUnlockButtonCoinImage"
            android:layout_width="14.0dip"
            android:layout_height="14.0dip"
            android:layout_marginLeft="20.0dip"
            android:src="@drawable/ic_coin_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/buyUnlockButtonText"
            app:layout_constraintRight_toLeftOf="@+id/buyUnlockPriceText"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="16.0sp"
            android:id="@+id/buyUnlockPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/buyUnlockButtonCoinImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ButtonText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/useUnlockButtonContainer"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_7"
        android:layout_marginBottom="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_3"
        android:layout_marginEnd="@dimen/grid_3"
        app:layout_constraintBottom_toTopOf="@id/unlocksLeftView">
        <Button
            android:id="@+id/useUnlockButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:backgroundTint="@color/hq_purple"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ButtonRound" />
        <ImageView
            android:id="@+id/useUnlockButtonImage"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_marginRight="20.0dip"
            android:src="@drawable/ic_unlock_transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/useUnlockText"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/useUnlockText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Use_a_Game_Unlock"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ButtonText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:textColor="@color/white"
        android:id="@id/nextGameButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_7"
        android:layout_marginBottom="@dimen/grid_1"
        android:text="@string/Start_the_Next_Game"
        android:layout_marginStart="@dimen/grid_3"
        android:layout_marginEnd="@dimen/grid_3"
        android:backgroundTint="@color/correct_green"
        app:layout_constraintBottom_toTopOf="@id/unlocksLeftView"
        style="@style/ButtonRound" />
    <Button
        android:enabled="false"
        android:textColor="@color/white"
        android:id="@+id/gameLockedButton"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_7"
        android:layout_marginBottom="@dimen/grid_1"
        android:text="@string/Locked"
        android:layout_marginStart="@dimen/grid_3"
        android:layout_marginEnd="@dimen/grid_3"
        android:backgroundTint="@color/hq_blue"
        app:layout_constraintBottom_toTopOf="@id/unlocksLeftView"
        style="@style/ButtonRound" />
    <TextView
        android:textSize="@dimen/caption_1"
        android:textColor="@color/white"
        android:id="@id/unlocksLeftView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_2"
        android:layout_marginBottom="@dimen/grid_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/logo"
        android:visibility="invisible"
        android:layout_width="34.0dip"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/grid_3"
        app:layout_constraintBottom_toBottomOf="@id/resultsTitleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/resultsTitleView"
        app:srcCompat="@drawable/ic_logo_white" />
    <include layout="@layout/coin_confirmation_view" />
    <include layout="@layout/modal_reconnecting" />
</androidx.constraintlayout.widget.ConstraintLayout>
