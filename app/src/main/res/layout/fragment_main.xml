<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:background="#36399a"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:layout_weight="1"
        layout="@layout/hq_layout" />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:layout_marginBottom="17dp"
       android:layout_gravity="center">
       <ImageView
           android:id="@+id/main_fragment_live_show_banner"
           android:layout_width="270dp"
           android:layout_height="270dp"

           android:background="@drawable/ic_main_logo_light"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_main_logo2"
           app:layout_constraintBottom_toTopOf="@+id/banner_live_txt"
           app:layout_constraintEnd_toEndOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintStart_toStartOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintTop_toTopOf="@+id/main_fragment_live_show_banner" />
       <TextView
           android:id="@+id/banner_live_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:text="بازی زنده"
           android:textAlignment="center"
           android:textColor="#E8FF00"

           android:textSize="40sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintEnd_toEndOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintHorizontal_bias="0.493"
           app:layout_constraintStart_toStartOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintTop_toTopOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintVertical_bias="0.369" />

       <TextView
           android:id="@+id/banner_time_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:text="فردا ساعت 14:00"
           android:textAlignment="center"
           android:textColor="#FFFFFF"
           android:textSize="25sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintEnd_toEndOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintHorizontal_bias="0.492"
           app:layout_constraintStart_toStartOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintTop_toBottomOf="@id/banner_live_txt"
           app:layout_constraintVertical_bias="0.0" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:text="اشتراک گذاری"
           android:textAlignment="center"
           android:textColor="#000000"
           android:textSize="15sp"
           android:textStyle="bold"
           android:drawablePadding="12dp"
android:background="@drawable/buttton_round_light_blue"
           android:drawableStart="@drawable/ic_share_black_24dp"
           app:layout_constraintBottom_toBottomOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintEnd_toEndOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintHorizontal_bias="0.508"
           app:layout_constraintStart_toStartOf="@+id/main_fragment_live_show_banner"
           app:layout_constraintTop_toBottomOf="@id/banner_time_txt"
           app:layout_constraintVertical_bias="0.544" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
</ScrollView>