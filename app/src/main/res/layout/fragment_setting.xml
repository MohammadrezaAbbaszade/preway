<?xml version="1.0" encoding="utf-8" ?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_daly_main_background"
    android:orientation="vertical">
    <include
android:layout_gravity="center"
        android:id="@+id/include"
        layout="@layout/setting_header" />

    <include
        android:layout_gravity="center"
        layout="@layout/setting_header_profile" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="35dp"
            >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="111dp"
                android:layout_gravity="center"
                android:src="@drawable/button_round_white" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="3dp"
                android:src="@drawable/button_round_shape_yellow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:layout_marginBottom="5dp"
                android:drawableEnd="@drawable/ic_coin"
                android:layout_gravity="center|bottom"
                android:drawablePadding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/store_item_img1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_group_avatar1"/>


            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6.8"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="111dp"
                android:layout_gravity="center"
                android:src="@drawable/button_round_white" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center|top"
                android:src="@drawable/button_round_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:layout_marginBottom="5dp"
                android:drawableEnd="@drawable/ic_coin"
                android:layout_gravity="center|bottom"
                android:drawablePadding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/store_item_img1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_avatar_alien"/>


            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="111dp"
                android:layout_gravity="center"
                android:src="@drawable/button_round_shape_dark_blue" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center|top"
                android:src="@drawable/button_round_shape_white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رایگان"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center|bottom"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/store_item_img1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_avatar_camera"/>




            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shareCodeButton"
            style="@style/ButtonRound"
            android:layout_width="302dp"
            android:layout_height="52dp"
            android:layout_marginBottom="@dimen/grid_1"
            android:background="@drawable/edittext_round_yellow"

            android:ellipsize="end"
            android:fontFamily="@font/circularstdbold"
            android:lines="1"
            android:text="adsar21478"
            android:textAlignment="textStart"
            android:textColor="#CDC4C4"
            android:textSize="20.0sp"
            app:autoSizeMaxTextSize="20.0sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/hq_blue"
            android:text="کد معرف"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.551" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        android:orientation="horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دریافت اعلان"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/setting_cashout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:backgroundTint="#6b6ed7"
            android:text="درخواست تسویه"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/button_round_red2"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="302dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:text="فقط دو روز دیگه مونده تا جون بگیری"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/multi_heart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <FrameLayout
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ProgressBar
                android:id="@+id/setting_progress_bar_daily_count"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/days_counter_state2"
                android:secondaryProgress="100" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
       android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_width="146dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:background="@drawable/button_round_light_blue2">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_sheypoor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تبلیغات ببین!"
                android:textStyle="bold"
                android:textSize="20sp"

                android:textColor="@color/white"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جایزه ببر!"
                android:textSize="15sp"

                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button

            android:layout_width="146dp"
            android:layout_height="145dp"
            android:drawableTop="@drawable/ic_give_your_gift"
            android:background="@drawable/button_round_purple2"/>


    </LinearLayout>
</LinearLayout>
</ScrollView>


