    <androidx.cardview.widget.CardView
        android:id="@+id/store_header"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:elevation="0.5dip"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:cardCornerRadius="12.0dip">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_small_heart"
        android:text="12"

        android:textColor="#000"
        android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_small_single_coin"
        android:text="12"
        android:textColor="#000"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="wrap_content"
android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/setting_progress_bar"
            android:progressDrawable="@drawable/days_counter_state2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progress="50"
            android:max="100"
            android:secondaryProgress="100"
            style="?android:attr/progressBarStyleHorizontal" />

        <TextView
            android:id="@+id/text_view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سطح 3"
            android:textColor="#000000"
            android:padding="6dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </FrameLayout>


</LinearLayout>
    </androidx.cardview.widget.CardView>
