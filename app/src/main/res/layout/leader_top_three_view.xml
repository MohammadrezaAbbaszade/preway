<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_2"
    android:layout_marginBottom="@dimen/grid_4"
    android:weightSum="3.0" android:layout_marginStart="@dimen/grid_1"
    android:layout_marginEnd="@dimen/grid_1">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/second_leader_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/second_leader_image_view"
                android:layout_width="@dimen/grid_10"
                android:background="@drawable/default_avatar"
                android:layout_height="@dimen/grid_10" />
            <TextView android:textSize="16.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/text_view_rounded"
                android:paddingBottom="2.0dip"
                android:layout_width="@dimen/grid_7_half"
                android:layout_height="@dimen/grid_7_half"
                android:text="2"
                android:fontFamily="@font/circularstdmedium"
                android:backgroundTint="@color/words_orange" />
        </RelativeLayout>
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/second_leader_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1"
            android:text="Hossein"
            android:layout_marginBottom="@dimen/grid_1"
            android:maxLines="1"
            android:fontFamily="@font/circularstdmedium" />
        <TextView
            android:id="@+id/second_leader_balance"
            android:text="200xp"
            style="@style/TextViewBalanceRounded" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="Level: 50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/first_leader_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/first_leader_image_view"
                android:background="@drawable/default_avatar"
                android:layout_width="@dimen/grid_12"
                android:layout_height="@dimen/grid_12" />
            <TextView android:textSize="18.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/text_view_rounded"
                android:paddingBottom="3.0dip"
                android:layout_width="@dimen/grid_4"
                android:layout_height="@dimen/grid_4"
                android:text="1"
                android:fontFamily="@font/circularstdmedium"
                android:backgroundTint="@color/hq_yellow" />
        </RelativeLayout>
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Ahmad"
            android:id="@+id/first_leader_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1"
            android:layout_marginBottom="@dimen/grid_1"
            android:maxLines="1"
            android:fontFamily="@font/circularstdmedium" />
        <TextView android:id="@+id/first_leader_balance"
            android:text="200xp"
            style="@style/TextViewBalanceRounded" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="Level: 50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/third_leader_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/third_leader_image_view"
                android:background="@drawable/default_avatar"
                android:layout_width="@dimen/grid_9"
                android:layout_height="@dimen/grid_9" />
            <TextView android:textSize="14.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/text_view_rounded"
                android:paddingBottom="2.0dip"
                android:layout_width="@dimen/grid_3"
                android:layout_height="@dimen/grid_3"
                android:text="3"
                android:fontFamily="@font/circularstdmedium"
                android:backgroundTint="@color/hq_red" />
        </RelativeLayout>

        <TextView
            android:id="@+id/third_leader_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1"
            android:layout_marginBottom="@dimen/grid_1"
            android:ellipsize="end"
            android:fontFamily="@font/circularstdmedium"
            android:gravity="center"
            android:maxLines="1"
            android:text="Ali"
            android:textColor="@color/text_primary"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/third_leader_balance"
            android:text="200xp"
            style="@style/TextViewBalanceRounded" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="Level: 50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
