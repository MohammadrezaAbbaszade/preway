<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:textColor="@color/hq_blue"
        android:id="@+id/power_ups_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/grid_16"
        android:layout_weight="1"
        android:text="پاک کن"
        android:drawableStart="@drawable/ic_eraser"
        android:layout_marginEnd="5dp"
        android:drawablePadding="5dp"
        android:backgroundTint="@color/hq_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/ButtonRound" />
    <Button
        android:textColor="@color/hq_blue"
        android:id="@+id/power_ups_people"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/grid_16"
        android:text="جون بیشتر"
        android:drawableStart="@drawable/ic_heart_round_background_filled"
        android:backgroundTint="@color/hq_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/ButtonRound" />


</LinearLayout>