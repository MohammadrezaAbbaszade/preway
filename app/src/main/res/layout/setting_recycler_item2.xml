<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="35dp"
            >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="111dp"
                android:layout_gravity="center"
                android:src="@drawable/button_round_shape" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="3dp"
                android:src="@drawable/button_round_shape_yellow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:layout_marginBottom="5dp"
                android:drawableEnd="@drawable/ic_coin"
                android:layout_gravity="center|bottom"
                android:drawablePadding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/store_item_img1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_group_avatar1"/>


            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6.8"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="111dp"
                android:layout_gravity="center"
                android:src="@drawable/button_round_shape" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center|top"
                android:src="@drawable/button_round_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:layout_marginBottom="5dp"
                android:drawableEnd="@drawable/ic_coin"
                android:layout_gravity="center|bottom"
                android:drawablePadding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/store_item_img1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_avatar_alien"/>


            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="111dp"
                android:layout_gravity="center"
                android:src="@drawable/button_round_shape_dark_blue" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center|top"
                android:src="@drawable/button_round_shape_white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رایگان"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center|bottom"
                android:textColor="@color/white"
               />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/store_item_img1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_avatar_camera"/>




            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>