<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"

    android:layout_height="240dp"
    android:layout_marginStart="@dimen/grid_2"
    android:layout_marginTop="@dimen/grid_1"
    android:layout_marginEnd="@dimen/grid_2"
    android:layout_marginBottom="@dimen/grid_1"
    android:elevation="0.5dip"
    android:orientation="vertical"
    app:cardCornerRadius="12.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/store_raw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Extra Lives"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/store_raw_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="This the sample Description"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="35dp"
                >

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center"
                    android:src="@drawable/button_round_shape" />

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/button_round_shape_white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@drawable/ic_coin"
                    android:layout_gravity="center|bottom"
                    android:drawablePadding="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/store_item_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_group_heart"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center|bottom"
                        android:drawablePadding="5dp"/>

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center"
                    android:src="@drawable/button_round_shape" />

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/button_round_shape_white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@drawable/ic_coin"
                    android:layout_gravity="center|bottom"
                    android:drawablePadding="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/store_item_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_group_heart"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center|bottom"
                        android:drawablePadding="5dp"/>

                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center"
                    android:src="@drawable/button_round_shape" />

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/button_round_shape_white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@drawable/ic_coin"
                    android:layout_gravity="center|bottom"
                    android:drawablePadding="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/store_item_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_group_heart"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center|bottom"
                        android:drawablePadding="5dp"/>

                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
