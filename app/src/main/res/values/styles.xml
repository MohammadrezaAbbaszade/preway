<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/hq_blue</item>
    </style>


    <style name="Caption1Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_body_secondary</item>
        <item name="android:fontFamily">@font/circularstdmedium</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonRound" parent="@style/Button">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@drawable/button_round_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_round</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/grid_7</item>
        <item name="android:fontFamily">@font/circularstdbold</item>
        <item name="android:paddingStart">@dimen/grid_3</item>
        <item name="android:paddingEnd">@dimen/grid_3</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BottomSheetRow">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/grid_6</item>
        <item name="android:drawableBottom">@color/mid_grey</item>
        <item name="android:fontFamily">@font/circularstdbook</item>
    </style>

    <style name="TextViewBalanceRounded" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/text_view_rounded</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/circularstdbook</item>
        <item name="android:paddingStart">@dimen/grid_1</item>
        <item name="android:paddingEnd">@dimen/grid_1</item>
        <item name="android:backgroundTint">@color/light_grey</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/circularstdbold</item>
    </style>

    <style name="BodyPrimary">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">1.7999878dip</item>
        <item name="android:fontFamily">@font/circularstdmedium</item>
    </style>

    <style name="ButtonRoundSmall" parent="@style/ButtonRound">
        <item name="android:textSize">@dimen/button_small_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/grid_4</item>
        <item name="android:paddingStart">@dimen/grid_1_half</item>
        <item name="android:paddingEnd">@dimen/grid_1_half</item>
    </style>

    <style name="zs_contact_us_fab">
        <item name="android:gravity">end|bottom|center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">@dimen/zs_fab_margin</item>
        <item name="android:contentDescription">@string/zs_general_contact_us_button_label_accessibility</item>
        <item name="srcCompat">@drawable/zs_create_ticket_fab</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/circularstdmedium</item>
    </style>
</resources>
